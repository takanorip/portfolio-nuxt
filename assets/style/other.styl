// Define background colors
$background = #fff;
$background-alt = #f5f5f5;

// Define border colors
$border = #dcd9d9;

// Define text colors
$heading = #212121;
$text = #757575;

/*
---------------------
----- 2. Mixins -----
---------------------
*/

$other-transition(duration = 0.5s, func = ease, property = all) {
  transition: duration func property;
}

$other-placeholder() {
  &::-webkit-input-placeholder {
    @content;
  }

  &:-moz-placeholder {
    @content;
    opacity: 1;
  }

  &::-moz-placeholder {
    @content;
    opacity: 1;
  }

  &:-ms-input-placeholder {
    @content;
  }
}

